<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accueil.ChambresActivity">


    <ImageView
        android:id="@+id/imageRectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="990dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/log__key_logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="290dp"
        android:layout_height="67dp"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/imageLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo">

        <TextView
            android:id="@+id/textLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:fontFamily="@font/mada"
            android:text="@string/log"
            android:textColor="#D1B78F"
            android:textSize="34sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textKeyPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada"
            android:text="@string/key_pro"
            android:textSize="34sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/rectangleArrivees"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintStart_toStartOf="@+id/imageRectangle"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textArrivees"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mada_semibold"
        android:gravity="center_vertical"
        android:text="@string/arriv_es_du_jour"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleArrivees"
        app:layout_constraintEnd_toEndOf="@+id/rectangleArrivees"
        app:layout_constraintStart_toStartOf="@+id/rectangleArrivees"
        app:layout_constraintTop_toTopOf="@+id/rectangleArrivees"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/rectangleDeparts"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageRectangle"
        app:layout_constraintTop_toBottomOf="@+id/rectangleArrivees"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textDeparts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mada_semibold"
        android:gravity="center_vertical"
        android:text="@string/d_parts_du_jour"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleDeparts"
        app:layout_constraintEnd_toEndOf="@+id/rectangleDeparts"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangleDeparts"
        app:layout_constraintTop_toTopOf="@+id/rectangleDeparts"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/rectangleChambres"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleDeparts"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textChambres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mada_bold"
        android:gravity="center_vertical"
        android:text="@string/chambres"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleChambres"
        app:layout_constraintEnd_toEndOf="@+id/rectangleChambres"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/rectangleChambres"
        app:layout_constraintTop_toTopOf="@+id/rectangleChambres"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/rectangleCommandes"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleChambres"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textCommandes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mada_semibold"
        android:gravity="center_vertical"
        android:text="@string/commandes"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleCommandes"
        app:layout_constraintEnd_toEndOf="@+id/rectangleCommandes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangleCommandes"
        app:layout_constraintTop_toTopOf="@+id/rectangleCommandes"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/rectangleRechercheClient"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/rectangleCommandes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/rectangleCommandes"
        app:layout_constraintTop_toBottomOf="@+id/rectangleCommandes"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textRechercheClient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mada_semibold"
        android:gravity="center_vertical"
        android:text="@string/recherche_client"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleRechercheClient"
        app:layout_constraintEnd_toEndOf="@+id/rectangleRechercheClient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangleRechercheClient"
        app:layout_constraintTop_toTopOf="@+id/rectangleRechercheClient"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlCompat" />
    <ImageView
        android:id="@+id/rectangleLogOut"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/imageRectangle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleRechercheClient"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textLogOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mada_semibold"
        android:gravity="center_vertical"
        android:text="@string/d_connexion"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleLogOut"
        app:layout_constraintEnd_toEndOf="@+id/rectangleLogOut"
        app:layout_constraintStart_toStartOf="@+id/rectangleLogOut"
        app:layout_constraintTop_toTopOf="@+id/rectangleLogOut"
        tools:ignore="RtlCompat" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageRectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textEntrezNumChambre"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="52dp"
                android:fontFamily="@font/mada_bold"
                android:text="@string/entrez_le_num_ro_de_la_chambre"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextNumChambre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/textEntrezNumChambre"
                app:layout_constraintStart_toStartOf="@+id/textEntrezNumChambre"
                app:layout_constraintTop_toBottomOf="@+id/textEntrezNumChambre"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/buttonAllerVersChambre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/aller_vers_la_chambre"
                app:cornerRadius="90dp"
                app:layout_constraintEnd_toEndOf="@+id/editTextNumChambre"
                app:layout_constraintStart_toStartOf="@+id/editTextNumChambre"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumChambre"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/textCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/mada_semibold"
                android:text="@string/check_out_venir"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/buttonAllerVersChambre"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="@+id/buttonAllerVersChambre"
                app:layout_constraintTop_toBottomOf="@+id/buttonAllerVersChambre" />

            <ImageView
                android:id="@+id/imageLogo2"
                android:layout_width="806dp"
                android:layout_height="215dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/square"
                app:layout_constraintEnd_toEndOf="@+id/textCheckOut"
                app:layout_constraintStart_toStartOf="@+id/textCheckOut"
                app:layout_constraintTop_toBottomOf="@+id/textCheckOut"
                app:srcCompat="@drawable/square" />

            <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_width="766dp"
                android:layout_height="182dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageLogo2"
                app:layout_constraintEnd_toEndOf="@+id/imageLogo2"
                app:layout_constraintHorizontal_bias="0.475"
                app:layout_constraintStart_toStartOf="@+id/imageLogo2"
                app:layout_constraintTop_toTopOf="@+id/imageLogo2"
                app:layout_constraintVertical_bias="0.484">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/NumChambreCheckOut1"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/chambre_231"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/date"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/heure1"
                        android:layout_width="192dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/dateCheckOut"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/nom1"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/mme_preynat_elisa"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/NumChambreCheckOut2"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/chambre_209"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/date2"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/datecheckout"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/heure2"
                        android:layout_width="192dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/heurecheckout"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/nom2"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mada_semibold"
                        android:text="@string/m_girou_david"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/buttonEnvoieNotif"
                android:layout_width="531dp"
                android:layout_height="51dp"
                android:fontFamily="@font/mada_bold"
                android:text="@string/envoyer_une_notification_de_rappel_de_check_out"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageLogo2"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/imageLogo2"
                app:layout_constraintTop_toBottomOf="@+id/etToken"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/textAllerVersChambreDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/mada_semibold"
                android:text="@string/aller_vers_les_chambres_disponibles"
                android:textAllCaps="false"

                android:textColor="#246ABD"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonEnvoieNotif"
                app:layout_constraintHorizontal_bias="0.452"
                app:layout_constraintStart_toStartOf="@+id/buttonEnvoieNotif"
                app:layout_constraintTop_toBottomOf="@+id/buttonEnvoieNotif"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Enter Title"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Rappel"
                app:layout_constraintStart_toStartOf="@+id/imageLogo2"
                app:layout_constraintTop_toBottomOf="@+id/imageLogo2" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Enter message"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="N'oubliez pas d'effectuer votre check-out avant 10h"
                app:layout_constraintStart_toStartOf="@+id/etTitle"
                app:layout_constraintTop_toBottomOf="@+id/etTitle" />

            <EditText
                android:id="@+id/etToken"
                android:hint="Enter Token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Name"
                app:layout_constraintStart_toStartOf="@+id/etMessage"
                app:layout_constraintTop_toBottomOf="@+id/etMessage" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>